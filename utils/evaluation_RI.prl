    while (<REP>)
      {
        #if (/^([0-9]+) Q0 ([^\t ]+) ([0-9]+)/)
        #  {
        #    my $qid = $1; my $docid = $2; my $rank = $3;

	    my ($qid,$vide,$docid,$rank) = split();
	    if ($rank<1) { die "$prg pb reading $file_run: ranks must be >= 1\n$_\n"}
	    if ($prefix_qid_string eq '' and $qid>$max_qid)
